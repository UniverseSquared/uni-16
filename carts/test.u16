rs = 2

function _init()
    w, h = size()
    rx = rand(w)
    ry = rand(h)
end

function _update()
    if btn(1) then ry = ry - rs
    elseif btn(2) then ry = ry + rs
    elseif btn(3) then rx = rx - rs
    elseif btn(4) then rx = rx + rs end
end

function _draw()
    rect(rx, ry, 30, 30, 3, true)
end
